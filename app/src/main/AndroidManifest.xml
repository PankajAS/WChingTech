<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hkgws.gladmore">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.plusonesoftwares.plusonesoftwares.gladmore.LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.plusonesoftwares.plusonesoftwares.gladmore.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.plusonesoftwares.plusonesoftwares.gladmore.FacilitiesActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.plusonesoftwares.plusonesoftwares.gladmore.WebViewActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <!-- Firebase Notifications -->
        <service android:name="com.plusonesoftwares.plusonesoftwares.gladmore.service.MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <service android:name="com.plusonesoftwares.plusonesoftwares.gladmore.service.MyFirebaseInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>
        <!-- ./Firebase Notifications -->
    </application>

</manifest>